/*
JOSM mappaint style for detailed road areas
https://www.openstreetmap.org/user/PlaneMad/diary/40442
*/

area[area:highway] {
  fill-color: #eee;
}

area[area:highway][crossing] {
  fill-color: yellow;
}

area[area:highway=footway][crossing] {
  fill-color: yellow;
}

way[road_marking=dash]{
  width: 2;
  color: white;
  dashes 2,2;
}

way[road_marking]{
  width: 2;
  color: white;
}

way[highway:lane]{
  width: 6;
  color: #777;
}
